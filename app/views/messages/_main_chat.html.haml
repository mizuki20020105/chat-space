.Chat-main
  .Chat-main__group_info
    .Chat-main__group_info__left_box
      = @group.name
      %ul.Chat-main__group_info__left_box__bottom_box
        Menber:
        %li.Chat-main__group_info__left_box__bottom_box1
          - @group.users.each do |user|
            = user.name
    .Chat-main__group_info__right_box       
      = link_to edit_group_path(@group.id) do
        Edit

  .Chat-main__field
    = render @messages    
 
  .Chat-main__message_form
    =form_with model: [@group, @message], html: {class: "Form"}, local:true do |f|
      .Chat-main__message_form__box
        = f.text_field :content, class:"Chat-main__message_form__box__text",placeholder:"type amessage"
        = f.label :image,class:"Chat-main__message_form__box__text__btn" do
          =icon('far','image')
          = f.file_field  "file",class:"Chat-main__message_form__box__text__btn__deret"
      = f.submit "send",class:"Chat-main__message_form__submit_btn"
    
