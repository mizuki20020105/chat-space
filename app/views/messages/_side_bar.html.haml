.Side-bar
  .Side-bar__user_name
    .Side-bar__user_name__top_items
      .Side-bar__user_name__top_items__name
        Chat-Space
      = link_to new_group_path, class: "Side-bar__user_name__top_items__icons" do
        = icon('fas', 'edit')  
      =link_to edit_user_path(current_user), class:"Side-bar__user_name__top_items__icons" do
        = icon('fas','cog')
  .Side-bar__group_list
    - current_user.groups.each do |group|
      .Side-bar__group_list__content
        = link_to group_messages_path(group) do
          .Side-bar__group_list__content__name
            = group.name
          .Side-bar__group_list__content__messages
            = group.show_last_message
 